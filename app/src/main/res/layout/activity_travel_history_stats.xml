<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="android.learn.com.tripmanager.TravelHistoryStats">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme">
        <TextView
            android:text="Travel Stats"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:textSize="20dp"
            android:padding="3dip" />
        </android.support.design.widget.AppBarLayout>
    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:stretchColumns="1"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp">
        <TableRow>
            <TextView
                android:text="@string/totalTrips"
                android:textColor="#000000"
                android:layout_marginTop="60dp"
                android:textStyle="bold"
                android:textSize="20dp"
                android:padding="3dip" />
            <TextView
                android:id="@+id/totaltrips"
                android:gravity="right"
                android:layout_marginTop="60dp"
                android:textSize="20dp"
                android:textAlignment="center"
                android:padding="3dip" />
        </TableRow>

        <TableRow>
            <TextView
                android:text="@string/totalDays"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="20dp"
                android:padding="3dip" />
            <TextView
                android:id="@+id/totaldays"
                android:gravity="right"
                android:textSize="20dp"
                android:textAlignment="center"
                android:padding="3dip" />
        </TableRow>

        <TableRow>
            <TextView
                android:text="@string/totalCities"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="20dp"
                android:padding="3dip" />
            <TextView
                android:id="@+id/totalcities"
                android:gravity="right"
                android:textSize="20dp"
                android:textAlignment="center"
                android:padding="3dip" />
        </TableRow>

        <TableRow>
            <TextView
                android:text="@string/totalDistance"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="20dp"
                android:padding="3dip" />
            <TextView
                android:id="@+id/totaldistance"
                android:gravity="right"
                android:textSize="20dp"
                android:textAlignment="center"
                android:padding="3dip" />
        </TableRow>

    </TableLayout>


</android.support.constraint.ConstraintLayout>
